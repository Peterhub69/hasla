<Window x:Class="hasla.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sprawdzarka Haseł" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Wpisz hasło:" FontSize="16"/>
            <PasswordBox Name="passwordBox1" FontSize="16" Width="300"/>
            <TextBlock Text="Potwierdź hasło:" FontSize="16" Margin="0,20,0,0"/>
            <PasswordBox Name="passwordBox2" FontSize="16" Width="300"/>
            <TextBlock Name="passwordStrengthText" FontSize="14" Margin="0,20,0,0"/>
            <Button Content="Sprawdź siłę hasła" Click="CheckPasswordStrength_Click" FontSize="16" Width="200" Margin="0,20,0,0"/>
            <Button Content="Wygeneruj mocne hasło" Click="GeneratePassword_Click" FontSize="16" Width="200" Margin="0,10,0,0"/>
            <TextBlock Name="generatedPasswordText" FontSize="14" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>


